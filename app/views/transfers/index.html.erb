<p id="notice"><%= notice %></p>

<h1>Transfers</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Value</th>
      <th>User</th>
      <th>Dia</th>
      <th>Mes</th>
      <th>Ano</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <td><%= transfer.from %></td>
        <td><%= transfer.to %></td>
        <td><%= transfer.value %></td>
        <td><%= transfer.user_id %></td>
        <td><%= transfer.dia %></td>
        <td><%= transfer.mes %></td>
        <td><%= transfer.ano %></td>
        <td><%= link_to 'Show', transfer %></td>
        <td><%= link_to 'Edit', edit_transfer_path(transfer) %></td>
        <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

