<div class="mld-grid">
  <div class="mdl-cell-row">
    <h2 class="mdl-cell mdl-cell--12-desktop  mdl-typography--text-center"> <%=	t :log_in %> </h2>
    <hr>
  </div>


  <div class="metade esquerda mdl-typography--text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <strong> <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input campi' %> </strong>
        <%= f.label (t :mail), class: 'mdl-textfield__label' %>
      </div><br>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <strong style="font-size: xx-large;color: darkgoldenrod"> <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input', pattern: '[\d|\w]{6}[\d|\w]*' %> </strong>
        <%= f.label (t :passwd), class: 'mdl-textfield__label' %>
      </div><br>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit (t :log_in), class: 'mdl-button mdl-js-button mdl-button--colored mdl-js-ripple-effect', style: 'background-color: darkgoldenrod; color: yellow' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <div class="metade direita mdl-typography--text-center">
    <%= image_tag 'cofrinho1.jpg', style: "width: 100%; height: auto" %>
  </div>
</div>