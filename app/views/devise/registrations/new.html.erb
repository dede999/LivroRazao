<div class="mld-grid">
  <div class="mdl-cell-row">
    <h2 class="mdl-cell mdl-cell--12-desktop  mdl-typography--text-center"> Cadastro </h2>
    <hr>
  </div>
</div>

<div class="metade esquerda mdl-typography--text-center">
  <%= image_tag 'cofrinho.jpg' %>
  <h3> Gerencie suas movimentações. <br> Não perca o controle </h3>
</div>

<div class="metade direita mdl-typography--text-center coin">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :email, class: 'mdl-textfield__label' %>
        <strong> <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input campi' %> </strong>
      </div><br>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :password, class: 'mdl-textfield__label' %>
        <strong style="font-size: xx-large;color: darkgoldenrod"> <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input', pattern: '[\d|\w]{6}[\d|\w]*' %> </strong>
      </div><br>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :password_confirmation, class: 'mdl-textfield__label' %>
        <strong style="font-size: xx-large"> <%= f.password_field :password_confirmation, autocomplete: "off", class: 'mdl-textfield__input' %> </strong>
      </div><br>

      <div class="mdl-grid"></div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>

      <%= render "devise/shared/links" %>
  <% end %>
</div>
